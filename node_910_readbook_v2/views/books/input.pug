extends ../books/main
block book_content
    link(rel="stylesheet", href="/css/books/input.css")
    form.books(method="POST")
        fieldset 
            legend 도서정보 #{book ? "수정" : "추가"}
            div.books.input
                if book
                    //-book.isbn의 값이 book 에 있으면 보여주고(?) 없으면 공백("") 으로 표시
                    input(type="number",value= `${book ? book.isbn : ""}`, 
                        inputmode="numeric",name="isbn",placeholder="ISBN, 도서코드",
                        readonly)
                if !book 
                    input(type="number",value= `${book ? book.isbn : ""}`,
                        inputmode="numeric",name="isbn",placeholder="ISBN, 도서코드")
                input(type="text",value= `${book ? book.title : ""}`,name="title",placeholder="도서명")
            div.books.input
                input(type="text",value= `${book ? book.publisher : ""}`,name="publisher",placeholder="출판사")
                input(type="text",value= `${book ? book.author : ""}`,name="author",placeholder="저자")
                input(type="text",name="compile",placeholder="역자")
            div.books.input
                input(type="number", value= `${book ? book.price : 0}`, inputmode="numeric",name="price",placeholder="정가")
                input(type="number", value= `${book ? book.discount : 0}`, inputmode="numeric",name="discount",placeholder="할인가")
                input(type="date",name="pubdate",placeholder="발행일자")
            div.books.input
                input.btn.list(type="button",value="리스트로") 
                input.btn.reset(type="reset",value="새로작성") 
                input.btn.submit(type="submit", value= `${book ? "수정하기" : "추가하기"}`)